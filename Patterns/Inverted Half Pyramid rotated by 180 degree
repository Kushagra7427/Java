package Looping.Patterns;

public class Ihfoeighty {
    public static void main(String[] args) {
        int n = 4;
        //outer loop
        for(int i = 1;i <= n;i++){
            //inner loops---> space print
            for(int j = 1;j <= n-i;j++){
                System.out.print(" ");
            }
            //inner loops---> star print
            for(int j = 1; j <= i;j++){
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
